@model SimpleHealthTracking.Web.ViewModels.MedicineTakenViewModel
@{
    ViewBag.Title = "Add a Habit/Medicine Taken Entry";
}

<h2>Add a New Habit/Medicine Taken Entry</h2>
@using (Html.BeginForm("Create", "MedicineTaken"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(mt => mt.MedicineId)
        @Html.DropDownListFor(mt => mt.MedicineId, new SelectList(ViewBag.MedicinesForUser, "Value", "Text"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(mt => mt.DateAddedFor)
        @Html.TextBoxFor(mt => mt.DateAddedFor, new { @class = "form-control datepicker", placeholder = "01/01/2017"})
        @Html.ValidationMessageFor(mt => mt.DateAddedFor)
    </div>
    <div class="form-group">
        @Html.LabelFor(mt => mt.TimeAddedFor)
        @Html.TextBoxFor(mt => mt.TimeAddedFor, new { @class = "form-control timepicker", placeholder = "22:22"})
        @Html.ValidationMessageFor(mt => mt.TimeAddedFor)
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}
@section scripts
{
    <script src="~/Scripts/jquery.timepicker.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $(".datepicker").datepicker();

            $(".timepicker").timepicker({
                'step': 15,
                'timeFormat': 'H:i'
            });

            $(".timepickerEnd").timepicker({
                'scrollDefault': '08:00',
                'step': 15,
                'timeFormat': 'H:i'
            });
        });
    </script>
}