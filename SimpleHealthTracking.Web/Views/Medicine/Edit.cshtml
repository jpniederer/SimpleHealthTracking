@model SimpleHealthTracking.Repository.Entities.Medicine

@{
    ViewBag.Title = "Edit Habit/Medicine";
}

<h2>Edit Habit/Medicine</h2>
<p>
    Note: Habits/Medicines are NOT publicly visible unless you choose to share your stats page.
    Only the people you share the link with will have access to your stats page.
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.TimeAdded)
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberOfTimesPerDay)
        @Html.TextBoxFor(m => m.NumberOfTimesPerDay, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberOfTimesPerDay)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsActive)
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsPublic)
        @Html.CheckBoxFor(m => m.IsPublic, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StartDate)
        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EndDate)
        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EndDate)
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
}
<div style="padding-top: 15px;">
    <p>
        @Html.ActionLink("Medicine Details", "Details", new { id = Model.Id}) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
        @Html.ActionLink("Back to Habit/Medicine List", "Index")
    </p>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")    
}