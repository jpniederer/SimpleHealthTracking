@model SimpleHealthTracking.Repository.Entities.Sleep

@{
    ViewBag.Title = "Edit Sleep";
}

<h2>Edit Sleep</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.MinutesSlept)
    @Html.HiddenFor(model => model.TimeAdded)
    <div class="form-group">
        @Html.LabelFor(s => s.StartTime)
        @Html.TextBoxFor(s => s.StartTime, new { @class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(s => s.StartTime)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.EndTime)
        @Html.TextBoxFor(s => s.EndTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.EndTime)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.SleepQuality)
        @Html.TextBoxFor(s => s.SleepQuality, new { @class = "form-control", placeholder = "0.0 out of 10.0 rating (not required)" })
        @Html.ValidationMessageFor(s => s.SleepQuality)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
<div style="padding-top: 15px;">
    <p>
        @Html.ActionLink("Sleep Details", "Details", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
        @Html.ActionLink("Back to Sleep Record List", "Index")
    </p>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}